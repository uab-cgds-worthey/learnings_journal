# safety
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

# simplicity
alias ll="ls -lh"

# Directory change
alias data="cd $USER_DATA"
alias home="cd $HOME"

# slurm
alias interbig="srun --ntasks=1 --cpus-per-task=4 --mem-per-cpu=4096 --time=02:00:00 --partition=interactive --job-name=cgds_inter --pty /bin/bash"
alias intersmall="srun --ntasks=1 --cpus-per-task=1 --mem-per-cpu=2048 --time=02:00:00 --partition=interactive --job-name=cgds_inter --pty /bin/bash"
